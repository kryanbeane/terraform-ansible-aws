global
  log /dev/log local0
  log /dev/log local1 notice
  chroot /var/lib/haproxy
  stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
  stats timeout 30s
  user haproxy
  group haproxy
  daemon

defaults
  log global
  mode http
  option httplog
  option dontlognull
  timeout connect 5000
  timeout client 50000
  timeout server 50000

frontend http-in
  bind *:80
  default_backend servers

backend servers
  mode http 
  balance roundrobin
  {% for web_server_ip in web_server_ips %}
  server web{{ loop.index }} {{ web_server_ip }}:80 check
  {% endfor %}
